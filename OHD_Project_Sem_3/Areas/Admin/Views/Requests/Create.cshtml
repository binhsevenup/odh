    <div>
        <h2 class="text-center" style="margin-bottom: 35px"><b>Create Request</b></h2>
        <hr style="margin-bottom: 50px" />
        <form action="/Admin/Requests/CreateStore" method="post" name="RequestForm">
            <div class="row form-group">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <label><b>Category</b></label>
                    <select name="category" class="filter form-control" required>
                        @foreach (var item in Model.FacilityCategories)
                        {
                            <option value="@item.FacilityCategory_Id">@item.FacilityCategory_Name</option>

                        }
                    </select>
                </div>
                <div class="col-md-4"></div>

            </div>
            <div class="row form-group">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <label><b>Facility</b></label>
                    <select name="facility" class="form-control">
                        <option value="default">Seclect</option>
                        @foreach (var item in Model.Facilities)
                        {
                            <option class="row" data-type="@item.FacilityCategory_Id" value="@item.FacilityId">@item.FacilityName</option>
                        }
                    </select>
                </div>
                <div class="col-md-4"></div>
            </div>
            <div class="row form-group">
                <div class="col-md-4"></div>
                <div class="col-md-6">

                    <label><b>Message</b></label>
                    <textarea class="form-control" name="remarks" rows="6" cols="65" placeholder="Enter the message." required></textarea>
                </div>
                <div class="col-md-2"></div>
            </div>


            <div class="row form-group">
                <div class="col-md-4"></div>
                <div class="col-md-1">
                    <input type="submit" value="Submit" class="form-control btn-primary" />
                </div>
                <div class="col-md-4"></div>

            </div>
        </form>

