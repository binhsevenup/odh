@*@model OHD_Project_Sem_3.Areas.Admin.Models.Request*@
@model OHD_Project_Sem_3.Areas.Admin.Models.TotalData


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section _headerPage
{
    <header class="page-header">
        <h2>Add Request</h2>

        <div class="right-wrapper pull-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="index.html">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li><span>Dashboard</span></li>
            </ol>

            <a class="sidebar-right-toggle"></a>
        </div>
    </header>
}

<h2>Create</h2>
<form action="/Requests/CreateStore" method="post">
    <div>
        Category-Facility
        <select name="category" class="filter">
            @foreach (var item in Model.FacilityCategories)
            {
                <option value="@item.FacilityCategory_Id">@item.FacilityCategory_Name</option>

            }
        </select>
    </div>
    <div>
        Facility
        <select name="facility" class="">
            <option value="">Seclects</option>
            @foreach (var item in Model.Facilities)
            {
                <option class="row" data-type="@item.FacilityCategory_Id" value="@item.FacilityId">@item.FacilityName</option>
            }
        </select>
    </div>
    <div>
        Remarks
        <textarea name="remarks"  rows="6" cols="55">
Enter remarks here...</textarea>
    </div>
    <div>
        <input type="submit" value="Submit" />
    </div>
</form>
@section masterjs {

    <script type="text/javascript">

        $(".filter").change(function () {
            var filterValue = $(this).val();
            var row = $('.row');

            row.hide();
            row.each(function(i, el) {
                if ($(el).attr('data-type') == filterValue) {
                    $(el).show();
                }
            });

        });

    </script>

}



