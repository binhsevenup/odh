@model OHD_Project_Sem_3.Areas.Admin.Models.Facility

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section _Header
{
    @Html.Partial("_HeaderLayout");
}
@section _LeftMenu
{
    @Html.Partial("_LeftMenu");
}
@section _headerPage
{
    <header class="page-header">
        <h2>Edit Facility</h2>

        <div class="right-wrapper pull-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="/Admin/Requests/Create">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li><span>Admin Manager / Facility / Edit Facility</span></li>
            </ol>

            <a class="sidebar-right-toggle"></a>
        </div>
    </header>
}


<div class="form-v5">

    <div class="page-content">
        <div class="form-v5-content">
            @using (Html.BeginForm("Edit", "Facilities", FormMethod.Post, new { @class = "form-detail" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.FacilityId)
                <h2>Form Edit Facility</h2>
                <div class="form-row">
                    @Html.LabelFor(model => model.FacilityName, htmlAttributes: new { @class = "control-label text-bold" })
                    @Html.EditorFor(model => model.FacilityName, new { htmlAttributes = new { @class = "input-text" } })
                    @Html.ValidationMessageFor(model => model.FacilityName, "", new { @class = "text-danger" })
                    <i class="far fa-clipboard"></i>
                </div>
                <div class="form-row">
                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label text-bold " })
                    @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "input-text" }, cols = 64, rows = 5 }) <br />
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
                <div class="form-row">
                    @Html.LabelFor(model => model.FacilityCategory_Id, "FacilityCategory_Id",
                        htmlAttributes: new { @class = "control-label text-bold" })
                    @Html.DropDownList("FacilityCategory_Id", null, htmlAttributes: new { @class = "input-text" })
                    @Html.ValidationMessageFor(model => model.FacilityCategory_Id, "", new { @class = "text-danger" })
                    <i class="fas fa-caret-down"></i>
                </div>
                <div class="form-row">
                    @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label text-bold" })
                    @Html.EnumDropDownListFor(model => model.Status, htmlAttributes: new { @class = "input-text" })
                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                    <i class="fas fa-caret-down"></i>
                </div>
                <div class="form-row-last" style="margin-top: 20px">
                    <input type="submit" class="register btn btn-primary" style="margin-right: 30px" value="Save">
                    @Html.ActionLink("Back to list", "Index", "Facilities",
                        new { @class = "btn btn-primary register", @style = "padding:14px" })
                </div>

            }
        </div>
    </div>
</div>