@model OHD_Project_Sem_3.Areas.Admin.Models.FacilityCategory

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section _Header
{
    @Html.Partial("_HeaderLayout");
}
@section _LeftMenu
{
    @Html.Partial("_LeftMenu");
}
@section _headerPage
{
    <header class="page-header">
        <h2>Edit Category</h2>

        <div class="right-wrapper pull-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="index.html">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li><span>Admin Manager / Categories / Edit Category</span></li>
            </ol>

            <a class="sidebar-right-toggle"></a>
        </div>
    </header>
}
@Html.Partial("_AlertMessage");

<div class="form-v5">

    <div class="page-content">
        <div class="form-v5-content">
            @using (Html.BeginForm("Edit", "FacilityCategories", FormMethod.Post, new { @class = "form-detail" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.FacilityCategory_Id)
                <h2>Form Edit Category</h2>
                <div class="form-row">
                    @Html.LabelFor(model => model.FacilityCategory_Name, htmlAttributes: new { @class = "control-label text-bold" })
                    @Html.EditorFor(model => model.FacilityCategory_Name, new { htmlAttributes = new { @class = "input-text" } })
                    @Html.ValidationMessageFor(model => model.FacilityCategory_Name, "", new { @class = "text-danger" })
                    <i class="far fa-clipboard"></i>
                </div>
                <div class="form-row">
                    @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label text-bold" })
                    @Html.EnumDropDownListFor(model => model.Status, htmlAttributes: new { @class = "input-text" })
                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                    <i class="fas fa-caret-down"></i>
                </div>
                <div class="form-row-last" style="margin-top: 20px">
                    <input type="submit" class="register btn btn-primary" style="margin-right: 30px" value="Submit">
                    @Html.ActionLink("Back to list", "Index", "FacilityCategories",null,
                        new { @class = "btn btn-primary register", @style = "padding:14px" })
                </div>

            }
        </div>
    </div>
</div>
