@model OHD_Project_Sem_3.Areas.Admin.Models.FacilityCategory

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section _headerPage
{
    <header class="page-header">
        <h2>Edit Category</h2>

        <div class="right-wrapper pull-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="index.html">
                        <i class="fa fa-home"></i>
                    </a>
                </li>
                <li><span>Admin Manager / Categories / Edit Category</span></li>
            </ol>

            <a class="sidebar-right-toggle"></a>
        </div>
    </header>
}

@using (Html.BeginForm("Edit","FacilityCategories", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <h2 class="text-center">Edit Form Category</h2>
    <hr style="margin-top: 35px"/>
    <div class="form-horizontal facility-style">
        
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.FacilityCategory_Id)

        <div class="form-group">
            @Html.LabelFor(model => model.FacilityCategory_Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.FacilityCategory_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FacilityCategory_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        

        <div class="form-group">
            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EnumDropDownListFor(model => model.Status, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
